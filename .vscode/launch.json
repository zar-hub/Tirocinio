{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ROOT Analysis",
      "type": "cppdbg",
      "request": "launch",
      "program": "/opt/root/bin/root",  // Path to the root executable
      "args": ["-l"],  // Run ROOT in interactive mode

      // Specify environment variables if needed
      "environment": [],

      // Specify the working directory of your project
      "cwd": "${workspaceFolder}",

      // Setup the debugger for GDB (you may need to adjust this based on your setup)
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],

      // Specify source file to be executed after launching ROOT
      "preLaunchTask": "LoadMacro",

      // Enable stopping on the entry point of the program
      "stopAtEntry": false,

      // Enable external console for interactive mode
      "externalConsole": true
    }
  ]
}
